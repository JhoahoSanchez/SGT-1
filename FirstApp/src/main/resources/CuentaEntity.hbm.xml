<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="com.example.firstapp.CuentaEntity" table="cuenta" schema="gestiontareas">
        <id name="direccionCorreo">
            <column name="direccionCorreo" sql-type="varchar(50)" length="50"/>
        </id>
        <property name="contrasena">
            <column name="contrasena" sql-type="varchar(50)" length="50" not-null="true"/>
        </property>
    </class>
</hibernate-mapping>